<visualization>
    <!-- NOTE: the properties reflect rviz display properties, please use the correct name -->
    <frames>
      <frame name="base_link"/> <!-- 1st is used as default fixed frame -->
      <frame name="world"/>
      <frame name="world_odom"/>
      <frame name="Waist"/>
      <frame name="l_sole"/>
      <frame name="r_sole"/>
    </frames>

    <display name="robot" type="rviz/RobotModel"/>

    <display name="point_cloud" type="rviz/PointCloud2">
	<property name="Topic" value="/multisense/image_points2_color"/>
	<property name="Style" value="Points"/>
	<property name="Size (Pixels)" value="3.0"/>
	<property name="Alpha" value="0.1"/>
    </display>
    
    <display name="laser" type="rviz/PointCloud2">
	<property name="Topic" value="/multisense/lidar_points2_color"/>
	<property name="Style" value="Points"/>
	<property name="Size (Pixels)" value="3.0"/>
	<property name="Alpha" value="0.1"/>
        <property name="Decay Time" value="15.0"/>
    </display>
     
    <display name="camera" type="rviz/Image">
	<property name="Image Topic" value="camera_raw"/>
    </display>
</visualization>

<modules> <!-- here are defined additional commands for plugins defined in yaml config files can be defined, pay attention to plugin names! -->
  
    <module name="ManipulationPlugin">
      	<dependencies>
	    <plugin name="IkRosSMPub"/>
	    <plugin name="OpenSotIk"/>
	    <plugin name="Grasp"/>
	</dependencies>

	<command_block>
	    <command type="std_srvs/Empty" name="Move Left" service_name="LSoftHand_getTrj"/>
	    <command type="std_srvs/Empty" name="Move Right" service_name="RSoftHand_getTrj"/>
	</command_block>
	<command_block>
	    <command type="grasping"/>
	</command_block>
    </module>

    <module name="Hose_Task">
      	<dependencies>
	    <plugin name="ManipulationPlugin"/>
	    <plugin name="IkRosSMPub"/>
	    <plugin name="OpenSotIk"/>
	    <plugin name="Grasp"/>
	</dependencies>

	<command_block>
	    <command type="cmd_service" name="success"/>
	    <command type="cmd_service" name="lh_move_fail"/>
	    <command type="cmd_service" name="rh_move_fail"/>
	</command_block>
	

        <command_block>
	    <command type="object_pose" topic="hose_pose" interactive_marker="extinguisher"/>
	</command_block>
    </module>

    <module name="DebrisRemovalTask">
	<dependencies>
	    <plugin name="ManipulationPlugin"/>
	    <plugin name="IkRosSMPub"/>
	    <plugin name="OpenSotIk"/>
	    <plugin name="Grasp"/>
	</dependencies>
      
	<command_block>
	    <command type="cmd_service" name="homing_success" enabling_status="RUNNING:HOMING"/>
	    <command type="cmd_service" name="homing_fail" enabling_status="RUNNING:HOMING"/>
	</command_block>

	<command_block>
	    <command type="cmd_service" name="reached_success" enabling_status="RUNNING:REACHED"/>
	    <command type="cmd_service" name="reached_fail" enabling_status="RUNNING:REACHED"/>
	</command_block>
      
	<command_block>
	    <command type="cmd_service" name="grasped_success" enabling_status="RUNNING:GRASPED"/>
	    <command type="cmd_service" name="grasped_fail" enabling_status="RUNNING:GRASPED"/>
	    <command type="cmd_service" name="move_away_after_ho" enabling_status="RUNNING:GRASPED"/>
	</command_block>

	<command_block>
	    <command type="cmd_service" name="picked_success" enabling_status="RUNNING:PICKED"/>
	    <command type="cmd_service" name="picked_fail" enabling_status="RUNNING:PICKED"/>
	    <command type="cmd_service" name="pick_second_hand" enabling_status="RUNNING:PICKED"/>
	</command_block>
	
	<command_block>
	    <command type="cmd_service" name="pick_second_hand_success" enabling_status="RUNNING:PICKSECONDHAND"/>
	    <command type="cmd_service" name="pick_second_hand_fail" enabling_status="RUNNING:PICKSECONDHAND"/>
	</command_block>
	
	<command_block>
	    <command type="cmd_service" name="lefthoming_success" enabling_status="RUNNING:LEFTHOMING"/>
	    <command type="cmd_service" name="lefthoming_fail" enabling_status="RUNNING:LEFTHOMING"/>
	</command_block>	
      
	<command_block>
	    <command type="cmd_service" name="movedaway_success" enabling_status="RUNNING:MOVEDAWAY"/>
	    <command type="cmd_service" name="movedaway_fail" enabling_status="RUNNING:MOVEDAWAY"/>
	</command_block>

	<command_block>
	    <command type="cmd_service" name="placeddown_success" enabling_status="RUNNING:PLACEDDOWN"/>
	    <command type="cmd_service" name="placeddown_fail" enabling_status="RUNNING:PLACEDDOWN"/>
	</command_block>

	<command_block>
	    <command type="cmd_service" name="ungrasped_success" enabling_status="RUNNING:UNGRASPED"/>
	    <command type="cmd_service" name="ungrasped_fail" enabling_status="RUNNING:UNGRASPED"/>
	</command_block>

	<command_block>
	    <command type="string" topic="hand_selection" name="LSoftHand"/>
	    <command type="string" topic="hand_selection" name="RSoftHand"/>
	</command_block>

	<command_block>
	    <command type="object_pose" topic="debris_pose" interactive_marker="debris"/>
	</command_block>
    </module>

    <module name="chengxu_walking">
	<command_block>
	    <command type="goal" topic="chengxu_walking_goal"/>
	    <command type="object_sequence" topic="walking_sequence" interactive_markers_sequence="feet"/>
	</command_block>
    </module>
    
    <module name="DoorFinalDemo">
        <dependencies>
	    <plugin name="ManipulationPlugin"/>
	    <plugin name="IkRosSMPub"/>
	    <plugin name="OpenSotIk"/>
	    <plugin name="Grasp"/>
	</dependencies>
	<status_block>
	    <status type="led_status" name="Status" topic="door_status_led"/>
	    <status type="led_status" name="Contact" topic="door_contact_led"/>
	    <status type="led_status" name="Grasp" topic="door_grasp_led"/>
	</status_block>
	<command_block>
	    <command type="object_pose" topic="handle_pose" interactive_marker="door"/>
	    <command type="cmd_service" name="grasp_pos_received" label="Course Reach"/>
	    <command type="cmd_service" name="" label="Fine Pose Tuning"/>
	    <command type="cmd_service" name="check_touch" label="Fine Conctacting"/>
	</command_block>
	<command_block>
	    <command type="cmd_service" name="door_grasp_ok" label="Push Door"/>            
	    <command type="cmd_service" name="door_push_ok" label="Move Away"/>
            <command type="cmd_service" name="left_push_complete" label="Push complete"/>
	</command_block>
	<command_block>
	    <command type="click" name="handle" topic="handle_click"/>
	</command_block>
    </module>
	
	
</modules>

<utils>
    <util name="trajectory_utils"/>
</utils>

